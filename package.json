{
	"name": "wp-block-theme",
	"version": "1.0.0",
	"description": "Block based theme",
	"author": "ilya frontman",
	"private": true,
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "",
	"devDependencies": {
		"@babel/core": "^7.19.6",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/preset-env": "^7.19.4",
		"@wordpress/babel-preset-default": "^7.4.0",
		"@wordpress/eslint-plugin": "^13.4.0",
		"@wordpress/stylelint-config": "^21.3.0",
		"cssnano": "^5.1.14",
		"eslint": "^8.26.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-concat-css": "^3.1.0",
		"gulp-cssnano": "^2.1.3",
		"gulp-rename": "^2.0.0",
		"husky": "^8.0.1",
		"postcss": "^8.4.18",
		"postcss-cli": "^10.0.0",
		"prettier": "^2.7.1",
		"stylelint": "^14.14.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-order": "^5.0.0",
		"stylelint-prettier": "^2.0.0",
		"gulp-ttf2woff": "^1.1.1"
	},
	"scripts": {
		"start": "npx gulp watch",
		"build": "npm run linters && npm run formaters && npx gulp",
		"stylelint": "npx stylelint \"assets/**/*.css\" --cache",
		"stylelint:fix": "npx stylelint \"assets/**/*.css\" --fix",
		"eslint": "npx eslint \"assets/**/*.js\" --cache --no-error-on-unmatched-pattern",
		"eslint:fix": "npx eslint --fix \"assets/**/*.js\" --no-error-on-unmatched-pattern",
		"linters": "npm run eslint && npm run stylelint",
		"formaters": "npm run prettier:fix && npm run eslint:fix && npm run stylelint:fix",
		"prettier:fix": "npx prettier --write \"*.(js|css|html)\"",
		"prepare": "husky install"
	}
}
